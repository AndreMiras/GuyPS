<ConfirmPopup>:
    size_hint: .5, .5
    auto_dismiss: True
    title: root.title
    on_touch_down:
        self.dismiss()
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.text
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '44sp'
            Button:
                text: 'Yes'
                on_release:
                    root.dispatch('on_answer','yes')
                    root.dispatch('on_yes')
            Button:
                text: 'No'
                on_release:
                    root.dispatch('on_answer','no')
                    root.dispatch('on_no')
